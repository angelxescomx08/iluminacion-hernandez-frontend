---
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro:assets";
import hero from "../assets/images/hero.webp";
---

<Layout title="Iluminación Hernández | Catálogo Prime">
    <main class="overflow-hidden bg-white">
        <section
            class="relative w-full flex items-center justify-center overflow-hidden bg-neutral-900"
            style="height: calc(100dvh - 74px);"
        >
            <div class="absolute inset-0 z-0">
                <div
                    class="absolute inset-0 z-10 bg-black/40 bg-gradient-to-b from-black/20 via-transparent to-black/50"
                >
                </div>

                <Picture
                    src={hero}
                    alt="Ambiente iluminado - Iluminación Hernández"
                    formats={["avif", "webp"]}
                    widths={[480, 800, 1200, 1920]}
                    sizes="100vw"
                    class="hero-image h-full w-full object-cover"
                    loading="eager"
                    fetchpriority="high"
                />
            </div>

            <div
                class="relative z-20 w-full max-w-4xl px-6 flex flex-col items-center justify-center text-center"
            >
                <h1
                    class="text-white text-3xl md:text-5xl lg:text-6xl font-bold font-montserrat tracking-tight leading-tight shadow-text"
                >
                    Iluminación que <span class="text-amber-400"
                        >transforma</span
                    > tus espacios
                </h1>

                <p
                    class="text-white/95 text-base md:text-xl lg:text-2xl font-medium font-inter mt-6 max-w-2xl leading-relaxed shadow-text-soft"
                >
                    Lámparas modernas, clásicas y decorativas para cada
                    necesidad
                </p>

                <div class="mt-8 flex flex-col items-center gap-4">
                    <div
                        class="w-12 h-[2px] bg-amber-500 shadow-[0_0_12px_rgba(245,158,11,0.8)]"
                    >
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* --- SOMBRAS DE TEXTO (Para legibilidad Prime) --- */
    .shadow-text {
        text-shadow:
            0 4px 12px rgba(0, 0, 0, 0.6),
            0 2px 4px rgba(0, 0, 0, 0.4);
    }

    .shadow-text-soft {
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
    }

    /* --- ANIMACIONES FLUIDAS (GPU) --- */
    .hero-image {
        /* Ken Burns más sutil: escala de 1.0 a 1.08 para evitar pixelado */
        animation: smooth-zoom 18s ease-in-out infinite alternate;
        will-change: transform;
        transform: translate3d(0, 0, 0);
    }

    /* Animación de los textos centrados */
    .hero-text-container {
        animation: floating-center 12s ease-in-out infinite alternate;
        will-change: transform;
    }

    @keyframes smooth-zoom {
        0% {
            transform: scale(1) translate3d(0, 0, 0);
        }
        100% {
            transform: scale(1.08) translate3d(-1%, -0.5%, 0);
        }
    }

    @keyframes floating-center {
        0% {
            transform: translate3d(-10px, 0, 0);
            opacity: 0.95;
        }
        100% {
            transform: translate3d(10px, 0, 0);
            opacity: 1;
        }
    }

    /* Optimización para dispositivos móviles */
    @media (max-width: 768px) {
        .hero-image {
            animation-duration: 22s;
        }

        @keyframes floating-center {
            from {
                transform: translate3d(-5px, 0, 0);
            }
            to {
                transform: translate3d(5px, 0, 0);
            }
        }
    }

    /* Soporte para usuarios que prefieren no ver animaciones */
    @media (prefers-reduced-motion: reduce) {
        .hero-image,
        .hero-text-container {
            animation: none;
        }
    }
</style>
